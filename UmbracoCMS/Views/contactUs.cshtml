@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "mainLayout.cshtml";

    var mapImage = Model.Value<IPublishedContent>("mapImage")?.Url();
    var formTitle = Model.Value<string>("formTitle");
    var formSubtitle = Model.Value<string>("formSubtitle");
    var formDescription = Model.Value<string>("formDescription");
    var pageTitle = Model.Value<string>("pageTitle");
            var partnerLogo1 = Model?.Value<IPublishedContent>("partnerLogo1")?.Url();
    var partnerLogo2 = Model?.Value<IPublishedContent>("partnerLogo2")?.Url();
    var partnerLogo3 = Model?.Value<IPublishedContent>("partnerLogo3")?.Url();
    var partnerLogo4 = Model?.Value<IPublishedContent>("partnerLogo4")?.Url();
    var partnerLogo5 = Model?.Value<IPublishedContent>("partnerLogo5")?.Url();
    var partnerLogo6 = Model?.Value<IPublishedContent>("partnerLogo6")?.Url();

}
<header class="ourproject-header">
    <div class="container">
        <h1 class="Servicepage-title">@pageTitle</h1>
        <nav class="breadcrumb">
            <a href="@Url.Content("/")">Home</a> &nbsp;&gt;&nbsp;
            <span class="breadcrumb-current">Contact</span> 
        </nav>
    </div>
</header>
@{
    var footerContactBlock = Model.Children.FirstOrDefault(x => x.ContentType.Alias == "footerContactBlock");
}

@if (footerContactBlock != null)
{
    @Html.Partial("FooterContactBlock", footerContactBlock)
}
<section class="contact-us-section ">
    @if (!string.IsNullOrEmpty(mapImage))
    {
        <div class="contact-map">
            <img src="@mapImage" alt="Map showing location" class="contact-map-image"/>
        </div>
    }

    <div class="contact-form-container ">
        <div class="contact-form ">
            <h4 class="contact-form-title">@formTitle</h4>
            <h1 class="contact-form-subtitle">@formSubtitle</h1>
            <p class="contact-form-description">@formDescription</p>

            <form action="#" method="post" class="contact-form-content">
                <div class="contact-form-fields">
                    <input type="text" name="name" placeholder="Name" class="contact-input" required />
                    <input type="email" name="email" placeholder="Email address" class="contact-input" required />
                    <input type="text" name="phone" placeholder="Phone" class="contact-input" required />
                    <select name="service" class="contact-input">
                        <option value="">Financial consulting</option>
                        <option value="service1">Service Option 1</option>
                        <option value="service2">Service Option 2</option>
                    </select>
                </div>
                <button type="submit" class="contact-submit-button">Submit</button>
            </form>
        </div>
    </div>
</section>
